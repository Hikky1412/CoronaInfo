<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:scrollIndicators="none">

    <Button
        android:text="Продолжить"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        android:height="62.5dp"
        android:layout_toLeftOf="@id/textView1"
        android:id="@+id/Next"
        android:translationY="325dp"
        app:backgroundTint="@android:color/holo_green_dark"
        android:textAppearance="Inter"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:text="Уже зарегистрированы"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        android:height="62.5dp"
        android:layout_toLeftOf="@id/textView1"
        android:id="@+id/продолжить"
        android:translationY="390dp"
        app:backgroundTint="#6979F8"
        android:textAppearance="Inter"
        android:textSize="30px"
        android:layout_centerHorizontal="true"/>

    <Button
        android:text="Продолжить через ВК"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        android:height="62.5dp"
        android:layout_toLeftOf="@id/textView1"
        android:id="@+id/Уже_зарегистрирован"
        android:translationY="470dp"
        app:backgroundTint="#449AE2"
        android:textAppearance="Inter"
        android:textSize="15dp"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/Ввод_имени"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        android:height="62.5dp"
        android:alpha="0.5dp"
        android:translationY="85dp"
        android:textAppearance="Inter"
        android:textSize="15dp" 
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/Ввод_фамилии"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        android:height="62.5dp"
        android:alpha="0.5dp"
        android:translationY="165dp"
        android:textAppearance="Inter"
        android:textSize="15dp"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/Введите_пункт"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        android:height="62.5dp"
        android:alpha="0.5dp"
        android:translationY="245dp"
        android:textAppearance="Inter"
        android:textSize="15dp" 
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/Текст_имя"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Введите имя"
        android:gravity="center_horizontal|center_vertical"
        android:translationY="70dp"
        android:textStyle="bold"
        android:textColor="#ff000000"
        android:textSize="14dp"/>

    <TextView
        android:id="@+id/Текст_фамилия"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Введите фамилию"
        android:gravity="center_horizontal|center_vertical"
        android:translationY="150dp"
        android:textStyle="bold"
        android:textColor="#ff000000"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/some_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Введите ваш населённый пункт"
        android:gravity="center_horizontal|center_vertical"
        android:translationY="230dp"
        android:textStyle="bold"
        android:textColor="#ff000000"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/some_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="Давайте зарегистрируемся"
        android:gravity="center_horizontal|center_vertical"
        android:translationY="10dp"
        android:textStyle="bold"
        android:textColor="#ff000000"
        android:textSize="25dp" />
    
    
    <TextView
        android:id="@+id/some_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="или"
        android:gravity="center_horizontal|center_vertical"
        android:translationY="451dp"
        android:textColor="#ff757575"
        android:textSize="14dp"
        android:textStyle="normal" />



</RelativeLayout>
